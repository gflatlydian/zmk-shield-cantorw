#include <dt-bindings/zmk/matrix_transform.h>
#include "cantorw-layouts.dtsi"

&physical_layout0 {
	kscan = <&kscan0>;
	transform = <&default_transform>;
};

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix-transform = &default_transform;
		zmk,physical-layout = &physical_layout0;
	};

	default_transform: matrix_transform {
		compatible = "zmk,matrix-transform";
		columns = <42>;
		rows = <1>;
		map = <
			RC(0,0)		RC(0,1)		RC(0,2)		RC(0,3)		RC(0,4)		RC(0,5)			RC(0,26)	RC(0,25)	RC(0,24)	RC(0,23)	RC(0,22)	RC(0,21)
			RC(0,6)		RC(0,7)		RC(0,8)		RC(0,9)		RC(0,10)	RC(0,11)		RC(0,32)	RC(0,31)	RC(0,30)	RC(0,29)	RC(0,28)	RC(0,27)
			RC(0,12)	RC(0,13)	RC(0,14)	RC(0,15)	RC(0,16)	RC(0,17)		RC(0,38)	RC(0,37)	RC(0,36)	RC(0,35)	RC(0,34)	RC(0,33)
												RC(0,18)	RC(0,19)	RC(0,20)		RC(0,41)	RC(0,40)	RC(0,39)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-direct";
		wakeup-source;

		input-gpios
		= <&pillbug 19 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 21 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 29 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 28 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 27 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 26 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>

		, <&pillbug 49 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 48 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 41 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 40 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 39 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 38 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>

		, <&pillbug 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 14 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 15 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 16 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 17 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 18 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>

		, <&pillbug 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		, <&pillbug 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP )>
		;

	};
};

